#!/bin/bash

#
# Skirt around pants to invoke builds from the current directory.
#

if [ $# == 0 ]; then goal="compile"; else goal=$1; fi
if [ $# == 2 ]; then target=":${*:$#}"; else target=""; fi

here=`pwd`

while [ ! \( -f ./pants -a -x ./pants \) ]; do
    if [ `pwd` == "/" ]; then
        echo "No pants found!"
        exit 1
    fi
    cd ..
done

x=${here#`pwd`}
there=${x:1}


command="./pants goal $goal ${there}$target"

echo $command
eval $command
